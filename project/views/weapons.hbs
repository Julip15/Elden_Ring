<h1>Weapons</h1>

{{! READ table }}
<table>
    <thead>
        <tr>
            {{#each weapons.[0]}} 
                <th>
                    {{@key}} 
                </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{#each weapons}}
        <tr>
            <td>{{this.[Weapon ID]}}</td>
            <td>{{this.Name}}</td>
            <td>{{this.Damage}}</td>
            <td>{{this.Category}}</td>

            {{! DELETE form }}
            <td>
                <form id="delete_weapon_form_{{this.[Weapon ID]}}" method="POST" action="/Weapons/delete" onsubmit="return confirm('Are you sure you want to delete {{this.Name}}?')">
                    <input type="hidden" name="delete_weapon_id" value="{{this.[Weapon ID]}}" />
                    <input type="hidden" name="delete_weapon_name" value="{{this.Name}}" />
                    <button class="btn-delete" type="submit">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>


<h2>Create a Weapon</h2>
<form class='cuForm' id='create_weapon_form'  method="POST" action="/Weapons/create">
    <label for='create_weapon_name'> Name: </label>
    <input type='text' placeholder="Enter Weapon Name" name='create_weapon_name' id='create_weapon_name' required />

    <label for='create_weapon_damage'>Damage: </label>
    <input type='number' placeholder="Enter Weapon Damage" name='create_weapon_damage' max='947' id='create_weapon_damage' required/>

    <label for='create_weapon_category_id'>Category: </label>
    <select name='create_weapon_category_id' id='create_weapon_category_id' required>
        <option value='' selected>Select a Category</option>
        {{#each weapon_categories}}
        <option value='{{this.category_id}}'>{{this.category_id}}</option>
        {{/each}}
    </select>


    <input type='submit' />
</form>
