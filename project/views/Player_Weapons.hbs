<h1>Inventory</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each inventory.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the column attribute }}
        {{#each inventory}}
        <tr>
            <td>{{this.[Inventory ID]}}</td>
            <td>{{this.Player}}</td>
            <td>{{this.Weapon}}</td>


            {{! DELETE form }}
            {{!
            
     # Citation for the following function:
     # Date: 6/02/2025
     # Adapted from: Exploration Implementing CUD operations 
     # Source URL: https://canvas.oregonstate.edu/courses/1999601/pages/exploration-implementing-cud-operations-in-your-app?module_item_id=25352968
    
            }}
            <form id='delete_inventory_form' method="POST" action="/Player_Weapons/delete" onsubmit="return confirm('Are you sure you want to delete {{this.[Inventory ID]}}?')">
                <input type='hidden' name='delete_inventory_id' value="{{this.[Inventory ID]}}" />
                <input type='hidden' name='delete_player' value='{{this.Player}}' />
                <input type='hidden' name='delete_weapon' value='{{this.Weapon}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

