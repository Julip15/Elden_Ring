<h2>Create a Inventory Item</h2>
<form class='cuForm' id='create_player_weapon_form' method="POST" action="/Player_Weapons/create">

        <label for='create_player'>Player: </label>
    <select name='create_player' id='create_player'>
        <option value='NULL' selected>Select a Player</option>
        <option value='NULL'>&lt; None &gt;</option>
        {{#each players}}
        <option value='{{this.player_id}}' required>{{this.name}}</option>
        {{/each}}
    </select>    

    <label for='create_weapon'>Weapon: </label>
    <select name='create_weapon' id='create_weapon'>
        <option value='NULL' selected>Select a Weapon</option>
        <option value='NULL'>&lt; None &gt;</option>
        {{#each weapons}}
        <option value='{{this.weapon_id}}' required>{{this.name}}</option>
        {{/each}}
    </select>


    <input type='submit' />
</form>

